{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.9.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "Meetup": {
      "source": {
        "object": "dbo.Meetups",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Meetup",
          "plural": "Meetups"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "read"
            }
          ]
        }
      ]
    },
    "MeetupAttendee": {
      "source": {
        "object": "dbo.MeetupAttendees",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "MeetupAttendee",
          "plural": "MeetupAttendees"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "read"
            }
          ]
        },
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "create"
            }
          ]
        }
      ]
    },
    "MyMeetups": {
      "source": {
        "object": "dbo.MyMeetupsView",
        "type": "view",
        "key-fields": [
          "Id"
        ]
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "MyMeetup",
          "plural": "MyMeetups"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "read",
              "policy": {
                "database": "@item.AttendeeId eq @claims.userId"
              }
            }
          ]
        }
      ]
    }
  }
}